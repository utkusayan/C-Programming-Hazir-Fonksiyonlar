#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>
int main()
{
    char c1;
    printf("Bir karakter giriniz:");
    scanf("%c",&c1);
    if(isalpha(c1)){
        if(isupper(c1))
            printf("Kucuk harf karsiligi:%c",tolower(c1));
        if(islower(c1))
            printf("Buyuk harf karsiligi:%c",toupper(c1));
    }
    return 0;
}
