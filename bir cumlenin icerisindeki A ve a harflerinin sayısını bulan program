#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int main()
{
    char cumle[255];
    printf("Bir cumle giriniz:");
    fgets(cumle,255,stdin);
    int i;
    int sayac=0;
    for(i=0;cumle[i]!='\0';i++){
        if(cumle[i]=='a'||cumle[i]=='A'){
            sayac++;
        }
    }

    printf("girdiginz cumle icerisinde %d adet a ya da A vardir.",sayac);
    return 0;
}
