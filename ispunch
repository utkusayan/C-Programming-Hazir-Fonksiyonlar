#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>
int main()
{
    int c1;
    printf("Bir karakter giriniz:");
    scanf("%c",&c1);
    if(ispunct(c1)){
        printf("%c karakteri bir noktalama isaretidir.",c1);
    }
    else
        printf("%c karakteri bir noktalama isareti degildir.",c1);
    return 0;
}
